{
  "name": "hardhadclass",
  "version": "1.0.0",
  "scripts": {
    "compile": "hardhat compile",
    "test": "hardhat test",
    "deploy:sepolia": "hardhat ignition deploy ./ignition/modules/SimpleBank.js --network sepolia",
    "deploy:base-sepolia": "hardhat ignition deploy ./ignition/modules/SimpleBank.js --network baseSepolia",
    "verify:sepolia": "hardhat verify --network sepolia",
    "verify:base-sepolia": "hardhat verify --network baseSepolia",
    "frontend:install": "cd frontend && npm install",
    "frontend:start": "cd frontend && npm start",
    "frontend:build": "cd frontend && npm run build",
    "dev": "concurrently \"npm run frontend:start\" \"echo 'Frontend running at http://localhost:3000'\"",
    "setup": "npm install && npm run frontend:install && npm run compile"
  },
  "devDependencies": {
    "@nomicfoundation/hardhat-chai-matchers": "^2.1.0",
    "@nomicfoundation/hardhat-ethers": "^3.1.0",
    "@nomicfoundation/hardhat-ignition": "^0.15.13",
    "@nomicfoundation/hardhat-ignition-ethers": "^0.15.14",
    "@nomicfoundation/hardhat-network-helpers": "^1.1.0",
    "@nomicfoundation/hardhat-toolbox": "^6.1.0",
    "@nomicfoundation/hardhat-verify": "^2.1.1",
    "@typechain/ethers-v6": "^0.5.1",
    "@typechain/hardhat": "^9.1.0",
    "chai": "^4.5.0",
    "concurrently": "^8.2.2",
    "ethers": "^6.15.0",
    "hardhat": "^2.26.3",
    "hardhat-gas-reporter": "^2.3.0",
    "solidity-coverage": "^0.8.16",
    "typechain": "^8.3.2"
  },
  "dependencies": {
    "dotenv": "^17.2.3"
  }
}
